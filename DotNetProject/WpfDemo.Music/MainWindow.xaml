<Window x:Class="WpfDemo.Music.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo.Music"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <!--行-->
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="账号："  HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <TextBox Width="300" Height="20" Name="TxtA"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="账号："  HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <TextBox Width="300" Height="20" Name="TxtB"></TextBox>
        </StackPanel>
        <Button Grid.Row="2" Width="200" Height="30" Content="Login" Name="BtnLogin" Click="BtnLogin_Click"></Button>
        <!--Grid  可以理解为一个表格，类似于HTML的table标签，由行和列组成-->
    </Grid>
</Window>
